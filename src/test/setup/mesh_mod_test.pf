  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_dz_array( this )

    use extrusion_config_mod, &
                             only: extrusion_method_quadratic, &
                                   extrusion_method_geometric, &
                                   extrusion_method_dcmip

    implicit none

    class( mesh_test_type ), intent( inout ) :: this

    ! Set vertical grid spacings values to test meshes with
    real(r_def), parameter :: dz_uni   = 2000.0_r_def
    real(r_def), parameter :: dz_quad  = 400.0_r_def
    real(r_def), parameter :: dz_geom  = 1883.545714005761_r_def
    real(r_def), parameter :: dz_dcmip = 883.0368802245059_r_def

    type (mesh_type) :: mesh_1, mesh_3, mesh_4, mesh_5

    real(r_def) :: dz_test(nlayers)
    real(r_def) :: test_real

    mesh_1 = mesh_type( this%partition,   &
                        this%global_mesh, &
                        nlayers,          &
                        domain_top,       &
                        extrusion_method_uniform )
    mesh_3 = mesh_type( this%partition,   &
                        this%global_mesh, &
                        nlayers,          &
                        domain_top,       &
                        extrusion_method_quadratic )
    mesh_4 = mesh_type( this%partition,   &
                        this%global_mesh, &
                        nlayers,          &
                        domain_top,       &
                        extrusion_method_geometric )
    mesh_5 = mesh_type( this%partition,   &
                        this%global_mesh, &
                        nlayers,          &
                        domain_top,       &
                        extrusion_method_dcmip )

    !-------------------------------------------------------------------
    ! Test get_dz for different meshes

    ! Uniform mesh_1, first layer depth
    dz_test = 0.0_r_def
    call mesh_1%get_dz(dz_test)
    test_real = dz_test(1)
    @assertEqual ( test_real, dz_uni, 1.0e-2_r_def )

    ! Quadratic mesh_3, first layer depth
    dz_test = 0.0_r_def
    call mesh_3%get_dz(dz_test)
    test_real = dz_test(1)
    @assertEqual ( test_real, dz_quad, 1.0e-2_r_def )

    ! Geometric mesh_4 with stretching_factor = 1.03_r_def, first layer depth
    dz_test = 0.0_r_def
    call mesh_4%get_dz(dz_test)
    test_real = dz_test(1)
    @assertEqual ( test_real, dz_geom, 1.0e-2_r_def )

    ! DCMIP mesh_5 with phi_flatten = 15.0_r_def, first layer depth
    dz_test = 0.0_r_def
    call mesh_5%get_dz(dz_test)
    test_real = dz_test(1)
    @assertEqual ( test_real, dz_dcmip, 1.0e-2_r_def )

  end subroutine test_dz_array

