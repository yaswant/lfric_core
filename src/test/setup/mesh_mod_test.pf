    !-------------------------------------------------------------------
    ! Test get_halo_depth
    test_integer=( mesh_1%get_halo_depth() )
    @assertEqual( 1, test_integer )

    !-------------------------------------------------------------------
    ! Test get_num_cells_halo
    test_integer=( mesh_1%get_num_cells_halo( 1 ) )
    @assertEqual( 0, test_integer )

    !-------------------------------------------------------------------
    ! Test get_num_cells_ghost
