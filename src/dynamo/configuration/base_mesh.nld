namelist base_mesh

  filename    : string( filename ) ! UGrid file holding horizontal mesh
  geometry    : enumeration[ planar, spherical ]
  partitioner : enumeration[ planar, cubedsphere ]
  ! fplane can not be true when nature = spherical
  fplane      : logical            ! Plane has constant f (omega)
  f_lat_deg   : real
  PI          : constant
  f_lat       : real[ 'f_lat_deg * PI / 180.0_r_def' ]

end namelist base_mesh
