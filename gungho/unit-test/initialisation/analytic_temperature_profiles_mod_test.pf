module analytic_temperature_profiles_mod_test

  use constants_mod, only : r_def
  use pFUnit_Mod

  implicit none

  private
  public :: analytic_temperature_profiles_test_type, test_all

  @TestCase
  type, extends(TestCase) :: analytic_temperature_profiles_test_type
    private
  contains
    procedure setUp
    procedure test_all
  end type analytic_temperature_profiles_test_type

  real(r_def), parameter :: gravity = 10.0_r_def
  real(r_def), parameter :: radius  = 6000000.0_r_def
  real(r_def), parameter :: omega   = 8.0E-5_r_def
  real(r_def), parameter :: p_zero  = 100000.0_r_def
  real(r_def), parameter :: rd      = 300.0_r_def
  real(r_def), parameter :: cp      = 1000.0_r_def
  real(r_def), parameter :: scaling = 1.0_r_def

  real(r_def), parameter :: bvf_square = 0.0001_r_def
contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    use gungho_feign_config_mod, only : feign_base_mesh_config,           &
                                        feign_planet_config,              &
                                        feign_initial_temperature_config, &
                                        feign_idealised_config,           &
                                        feign_initial_wind_config,        &
                                        feign_initial_density_config
    use initial_wind_config_mod, only : initial_wind_profile_none

    use base_mesh_config_mod, only : base_mesh_geometry_planar, &
                                     base_mesh_partitioner_planar
    use idealised_config_mod,  only: idealised_test_cold_bubble_x

    implicit none

    class(analytic_temperature_profiles_test_type), intent(inout) :: this

    call feign_initial_temperature_config( bvf_square )
    call feign_idealised_config( idealised_test_cold_bubble_x )
    call feign_planet_config( gravity=gravity, radius=radius, omega=omega, &
                              rd=rd, cp=cp, p_zero=p_zero,                 &
                              scaling_factor=scaling )

    call feign_base_mesh_config                               &
             ( filename='foo', prime_mesh_name='unit_test',   &
               geometry=base_mesh_geometry_planar,            &
               partitioner=base_mesh_partitioner_planar,      &
               fplane=.false., f_lat_deg=0.0_r_def )

    call feign_initial_wind_config( initial_wind_profile_none,      &
                                    sbr_angle_lat=0.0_r_def,        &
                                    sbr_angle_lon=0.0_r_def,        &
                                    u0=0.0_r_def,                   &
                                    v0=0.0_r_def,                   &
                                    nl_constant=0.0_r_def,          &
                                    wind_time_period=0.0_r_def,     &
                                    smp_init_wind=.false. )
    call feign_initial_density_config( sample_init_rho = .false.,                      &
                                       set_hydrostatic_density = .false.,              &
                                       tracer_max = 1.0_r_def,                         &
                                       tracer_background = 1.0_r_def,                  &
                                       r1 = 0.1_r_def, x1 = 0.0_r_def, y1 = 0.0_r_def, &
                                       r2 = 0.1_r_def, x2 = 0.0_r_def, y2 = 0.0_r_def )
  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_all( this )

    use analytic_temperature_profiles_mod, only: analytic_temperature
    use reference_profile_mod,             only: reference_profile

    use idealised_config_mod,              only : idealised_test_cold_bubble_x, &
                                                  idealised_test_cold_bubble_y, &
                                                  idealised_test_warm_bubble,   &
                                                  idealised_test_warm_bubble_3d

    implicit none

    class(analytic_temperature_profiles_test_type), intent(inout) :: this

    real(kind=r_def) :: xyz(3)
    real(kind=r_def) :: temperature, pressure, density
    real(kind=r_def) :: answer
    real(kind=r_def), parameter :: tol = 1.0e-14

    xyz = (/ 0.0_r_def, 0.0_r_def, 3000.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, idealised_test_cold_bubble_x)
    temperature = analytic_temperature(xyz, idealised_test_cold_bubble_x) 
    answer = 300.0_r_def - 15.0_r_def/pressure
    @assertEqual(answer, temperature, tol)
    temperature = analytic_temperature(xyz, idealised_test_cold_bubble_y)
    @assertEqual(answer, temperature, tol)

    xyz = (/ 0.0_r_def, 1000.0_r_def, 260.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, idealised_test_warm_bubble)
    answer = temperature + 0.5_r_def
    temperature = analytic_temperature(xyz, idealised_test_warm_bubble) 
    @assertEqual(answer, temperature, tol)

    xyz = (/ 0.0_r_def, 0.0_r_def, 500.0_r_def /)
    call reference_profile(pressure, density, temperature, xyz, idealised_test_warm_bubble_3d)
    answer = temperature + 2.0_r_def
    temperature = analytic_temperature(xyz, idealised_test_warm_bubble_3d) 
    @assertEqual(answer, temperature, tol)

  end subroutine test_all

end module analytic_temperature_profiles_mod_test
