!> Tests the compute_column_mass kernel
module compute_column_mass_kernel_mod_test

  use constants_mod, only : i_def, r_def
  use pFUnit_Mod

  implicit none

  private
  public :: test_all

  @TestCase
  type, extends(TestCase), public :: compute_column_mass_kernel_test_type
    private
  contains
    procedure test_all
  end type compute_column_mass_kernel_test_type

contains

  @test
  subroutine test_all( this )

    use compute_column_mass_kernel_mod, only : compute_column_mass_code

    implicit none

    class(compute_column_mass_kernel_test_type), intent(inout) :: this

    real(kind=r_def), parameter :: tol = 1.0e-9_r_def

    ! Mesh
    integer(kind=i_def), parameter :: nlayers = 3_i_def
    real(r_def),         parameter :: radius = 10.0_r_def

    integer(kind=i_def), parameter             :: ndf = 1_i_def
    integer(kind=i_def), parameter             :: undf_w3 = 3_i_def
    integer(kind=i_def), parameter             :: undf_wth = 4_i_def
    integer(kind=i_def), parameter             :: undf_2d = 1_i_def
    integer(kind=i_def), dimension(ndf)        :: map_w3, map_wth, map_2d
    real(kind=r_def),    dimension(undf_w3)    :: rho_field, height_w3
    real(kind=r_def),    dimension(undf_wth)   :: height_wth
    real(kind=r_def),    dimension(undf_2d)    :: tot_col_mass, ans_tot_col_mass

    integer(kind=i_def) :: i, k

    map_w3 = 1_i_def
    map_wth = 1_i_def
    map_2d = 1_i_def

    do k = 0, nlayers-1
        rho_field(map_w3(1) + k) = real(k, r_def)+1.0_r_def
        height_w3(map_w3(1) + k) = real(k, r_def)+1.0_r_def
    end do

    do k = 0, nlayers
        height_wth(map_wth(1) + k) = real(k, r_def)+0.5_r_def
    end do

    call compute_column_mass_code( nlayers,                       &
                                   rho_field, height_w3,          &
                                   height_wth, tot_col_mass,      &
                                   radius,                        &
                                   ndf, undf_w3, map_w3,          &
                                   ndf, undf_wth, map_wth,        &
                                   ndf, undf_2d, map_2d )

    ans_tot_col_mass = 9.16_r_def
    @assertEqual(ans_tot_col_mass,tot_col_mass,tol)

  end subroutine test_all

end module compute_column_mass_kernel_mod_test
