&jedi_lfric_tests
write_data=.true.
test_trajectory_path='/data/users/lfric/data/jedi-lfric/Ticket4141/jedi_trajectory'
test_field='theta'
/

&base_mesh
f_lat_deg=45.0,
file_prefix='mesh_C12',
fplane=.false.,
geometry='spherical',
prepartitioned=.false.,
prime_mesh_name='dynamics',
topology='fully_periodic',
/

&extrusion
domain_top=1000.0,
method='um_L70_50t_20s_80km',
number_of_layers=70,
stretching_method='linear',
/

&finite_element
cellshape='quadrilateral',
element_order=0,
rehabilitate=.true.,
coord_order=1
coord_system='alphabetaz'
/

&io
  use_xios_io               = .true.
  write_diag                = .true.
  diagnostic_frequency      = 1
  file_convention           = 'UGRID'
  subroutine_timers         = .false.
  timer_output_path         = 'timer.txt'
  subroutine_counters       = .false.
  counter_output_suffix     = 'counter.txt'
  checkpoint_read           = .false.
  checkpoint_write          = .false.
  file_convention           = "UGRID"
/

&logging
  run_log_level='info'
/

&time
  calendar = 'timestep'
  timestep_start = '1'
  timestep_end = '7'
  calendar_type='gregorian'
  calendar_origin='2018-04-14 21:00:00'
  calendar_start='2018-04-14 21:00:00'
/

&timestepping
  dt=3600.0
  spinup_period=0.0
/

&partitioning
  partitioner='cubedsphere',
  panel_decomposition = 'auto',
/

&planet
  radius=6371229.0,
  scaling_factor=125.0,
/
