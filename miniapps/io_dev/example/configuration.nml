
!=======================  IO_Dev configuration namelist =======================
&io_dev
  field_initialisation  = 'analytic'
  time_variation        = 'analytic'
  ancil_update_freq     = 'always'
  field_kind            = 'real'
/
!==============================================================================

&files
  diag_stem_name            = 'diagIODev'
  checkpoint_stem_name      = 'restartIoDev'
  start_dump_filename       = 'real/IODev_dump_C12'
  start_dump_directory      = '../data'
  time_varying_input_path   = 'time_var_input'
  time_data_path            = 'time_data'
/

&io
  use_xios_io               = .true.
  write_diag                = .true.
  write_dump                = .false.
  diagnostic_frequency      = 1
  file_convention           = 'UGRID'
  subroutine_timers         = .false.
  subroutine_counters       = .false.
  checkpoint_read           = .false.
  checkpoint_write          = .false.
/

&time
 calendar='timestep'
 timestep_start='1'
 timestep_end='10'
 calendar_type='gregorian'
 calendar_start='2016-01-01 15:00:00'
/

&timestepping
  dt                 = 86400.0
  spinup_period      = 1
/

&base_mesh
  filename        = 'mesh_io_dev.nc'
  prime_mesh_name = 'C3'
  geometry        = 'spherical'
  offline_partitioning = .false.
  topology        = 'fully_periodic'
  fplane          = .false.
  f_lat_deg       = 45.0
/

&extrusion
  method           = 'uniform'
  domain_top       = 30000.0
  number_of_layers = 3
/

&finite_element
  cellshape        = 'quadrilateral'
  element_order    = 0
  rehabilitate     = .true.
  coord_order      = 1
  coord_system     = 'alphabetaz'
/

&logging
  run_log_level='info'
/

&planet
  radius         = 6371229.0
  scaling_factor = 1.0
/

&partitioning
  partitioner         = 'cubedsphere'
  panel_decomposition = 'auto'
/

&domain_size
  planar_domain_min_x = -1.0
  planar_domain_max_x =  1.0
  planar_domain_min_y = -1.0
  planar_domain_max_y =  1.0
/
