module analytic_buoyancy_profiles_mod_test

  use constants_mod, only : r_def, i_def
  use pFUnit_Mod

  implicit none

  private
  public :: analytic_buoyancy_profiles_test_type, test_all

  @TestCase
  type, extends(TestCase) :: analytic_buoyancy_profiles_test_type
    private
  contains
    procedure setUp
    procedure tearDown
    procedure test_all
  end type analytic_buoyancy_profiles_test_type

  real(r_def), parameter :: gravity = 10.0_r_def
  real(r_def), parameter :: radius  = 6000000.0_r_def
  real(r_def), parameter :: omega   = 8.0E-5_r_def
  real(r_def), parameter :: p_zero  = 100000.0_r_def
  real(r_def), parameter :: rd      = 300.0_r_def
  real(r_def), parameter :: cp      = 1000.0_r_def
  real(r_def), parameter :: scaling = 1.0_r_def

  real(r_def),    parameter :: bvf_square         = 0.0001_r_def
  real(r_def),    parameter :: profile_data(1)    = (/ 300.0_r_def /)
  real(r_def),    parameter :: profile_heights(1) = (/ 0.0_r_def /)
  real(r_def),    parameter :: theta_surf         = 300.0_r_def
  real(r_def),    parameter :: pert_width_scaling = 1.0_r_def
  real(r_def),    parameter :: pert_centre        = 120.0_r_def
  integer(i_def), parameter :: profile_size       = 1_i_def

  real(r_def), parameter :: surface_pressure = 1000.0e2_r_def

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  subroutine setUp( this )

    use base_mesh_config_mod,    only : geometry_spherical,      &
                                        topology_fully_periodic
    use feign_config_mod,        only : feign_base_mesh_config,           &
                                        feign_planet_config,              &
                                        feign_initial_temperature_config, &
                                        feign_idealised_config,           &
                                        feign_initial_wind_config,        &
                                        feign_initial_pressure_config

    use initial_pressure_config_mod,                    &
                                 only : method_balanced
    use initial_temperature_config_mod,                 &
                                 only : perturb_none
    use idealised_config_mod,    only : test_gravity_wave
    use initial_wind_config_mod, only : profile_none

    implicit none

    class(analytic_buoyancy_profiles_test_type), intent(inout) :: this

    call feign_initial_temperature_config( bvf_square=bvf_square,           &
                                           perturb=perturb_none,            &
                                           profile_data=profile_data,       &
                                           profile_heights=profile_heights, &
                                           profile_size=profile_size,       &
                                           theta_surf=theta_surf,           &
                                           pert_centre=pert_centre,         &
                                           pert_width_scaling=pert_width_scaling )

    call feign_initial_pressure_config( method=method_balanced,             &
                                        surface_pressure=surface_pressure )

    call feign_idealised_config( test=test_gravity_wave )
    call feign_planet_config( gravity=gravity, radius=radius, omega=omega, &
                              rd=rd, cp=cp, p_zero=p_zero,                 &
                              scaling_factor=scaling )

    call feign_base_mesh_config                     &
             ( filename='foo',                      &
               prime_mesh_name='unit_test',         &
               geometry=geometry_spherical,         &
               offline_partitioning=.false.,        &
               topology=topology_fully_periodic,    &
               fplane=.false., f_lat_deg=0.0_r_def )

    call feign_initial_wind_config( profile=profile_none,       &
                                    sbr_angle_lat=0.0_r_def,    &
                                    sbr_angle_lon=0.0_r_def,    &
                                    u0=0.0_r_def,               &
                                    v0=0.0_r_def,               &
                                    nl_constant=0.0_r_def,      &
                                    shear=1.0_r_def,            &
                                    wavelength=1.0_r_def,       &
                                    wind_time_period=0.0_r_def, &
                                    smp_init_wind=.false. )

  end subroutine setUp

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

  subroutine tearDown( this )

    use configuration_mod,        only: final_configuration

    implicit none

    class(analytic_buoyancy_profiles_test_type), intent(inout) :: this

    call final_configuration()

  end subroutine tearDown

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test
  subroutine test_all( this )

    use analytic_buoyancy_profiles_mod, only: analytic_buoyancy
    use planet_config_mod,              only: scaled_radius

    implicit none

    class(analytic_buoyancy_profiles_test_type), intent(inout) :: this

    real(kind=r_def) :: llr(3), xyz(3)
    real(kind=r_def) :: b, buoyancy
    real(r_def), parameter :: tol = 1.0e-14

    xyz = (/ scaled_radius, 0.0_r_def, 0.0_r_def /)
    b = analytic_buoyancy(xyz)

    buoyancy = 0.0_r_def
    @assertEqual(buoyancy, b, tol)

  end subroutine test_all

end module analytic_buoyancy_profiles_mod_test
