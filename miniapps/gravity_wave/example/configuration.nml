&base_mesh
file_prefix = 'mesh_C16_MG'
geometry = 'spherical'
offline_partitioning = .false.
prime_mesh_name = 'C16'
topology = 'fully_periodic'
fplane = .false.
f_lat_deg = 45.0
/

&checks
correction_hours=24
energy_correction='none'
/

&section_choice
dynamics = 'none'
/

&extrusion
domain_top = 10000.0
method = 'uniform'
number_of_layers = 10
/

&files
ancil_directory = ''
checkpoint_stem_name = 'restartGravityWave'
diag_stem_name = 'diagGravityWave'
orography_ancil_path = ''
start_dump_directory = ''
start_dump_filename = ''
/

&finite_element
cellshape = 'quadrilateral'
coord_order = 1
coord_system = 'alphabetaz'
element_order = 0
rehabilitate = .true.
vorticity_in_w1 = .true.
/

&formulation
dlayer_on = .false.
dry_static_adjust = .false.
exner_from_eos = .false.
init_exner_bt = .false.
l_multigrid = .true.
moisture_formulation='dry'
rotating = .false.
shallow = .false.
si_momentum_equation = .false.
use_physics = .false.
use_wavedynamics = .false.
vector_invariant = .true.
/

&initial_temperature
bvf_square = 0.0001
pert_width_scaling = 1.0
theta_surf = 340.0
/

&initial_pressure
method = 'projected'
surface_pressure = 1000.0e2
/

&gravity_wave_constants
b_space = 'wtheta'
speed_of_sound = 340.0
/

&initial_wind
nl_constant = 0.0
profile = 'none'
sbr_angle_lat = 0.0
sbr_angle_lon = 0.0
smp_init_wind = .false.
u0 = 0.0
v0 = 0.0
wind_time_period = 0.0
/

&initialization
ancil_option = 'none'
init_option = 'analytic'
lbc_option = 'none'
/

&io
checkpoint_read = .false.
checkpoint_write = .false.
diagnostic_frequency = 36
nodal_output_on_w3 = .true.
subroutine_counters = .false.
subroutine_timers = .true.
use_xios_io = .true.
write_conservation_diag = .false.
write_diag = .true.
write_dump = .false.
write_fluxes = .false.
write_minmax_tseries = .false.
/

&logging
run_log_level = 'info'
/

&time
calendar = 'timestep'
timestep_end = '36'
timestep_start = '1'
calendar_type='gregorian'
calendar_start='2016-01-01 15:00:00'
/

&planet
cp = 1005.0
gravity = 9.80665
omega = 7.292116E-5
p_zero = 100000.0
radius = 6371229.0
rd = 287.05
scaling_factor = 125.0
/

&solver
fail_on_non_converged=.true.
gcrk = 1
maximum_iterations = 399
method = 'bicgstab'
monitor_convergence=.true.
preconditioner = 'diagonal'
tolerance = 1.0e-12
/

&mixed_solver
eliminate_variables='none',
fail_on_non_converged=.true.
gcrk = 4
guess_np1 = .false.
mixed_solver_a_tol = 1.e-6
monitor_convergence=.true.
normalise = .true.
reference_reset_freq = 1
si_maximum_iterations = 20
si_method = 'gcr'
si_preconditioner = 'pressure'
si_tolerance = 1.0e-4
split_w = .false.
/

&helmholtz_solver
fail_on_non_converged=.true.
gcrk = 18
method = 'bicgstab'
monitor_convergence=.true.
normalise = .true.
preconditioner = 'multigrid'
si_pressure_maximum_iterations = 100
si_pressure_tolerance = 1.0e-4
/

&multigrid
multigrid_chain_nitems = 4
chain_mesh_tags = 'C16','C8','C4', 'C2'
smooth_relaxation = 0.8
n_presmooth = 2
n_postsmooth = 2
n_coarsesmooth = 4
/

&timestepping
alpha = 0.5
dt = 100.0
inner_iterations = 2
method = 'semi_implicit'
outer_iterations = 2
runge_kutta_method = 'ssp3'
spinup_alpha = .false.
spinup_period = 0.0
spinup_winds = .false.
tau_r = 0.0
tau_t = 0.0
tau_u = 0.0
/

&partitioning
partitioner = 'cubedsphere'
panel_decomposition = 'auto'
panel_xproc = 1
panel_yproc = 1
/

&boundaries
limited_area = .false.
/
